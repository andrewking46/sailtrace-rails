<%= sailtrace_form_for user do |f| %>
  <%= f.input :first_name,
              as: :text,
              label: "First name",
              input_html: { autocomplete: "given-name", autocorrect: :off, required: true, autofocus: true, autocapitalize: :words, enterkeyhint: :next, spellcheck: false, title: "Enter your first name" } %>

  <%= f.input :last_name,
              as: :text,
              label: "Last name",
              input_html: { autocomplete: "family-name", autocorrect: :off, required: true, autocapitalize: :words, enterkeyhint: :next, spellcheck: false, title: "Enter your last name" } %>

  <%= f.input :username,
              as: :text,
              label: "Username",
              prepend: "@",
              input_html: { autocorrect: :off, required: true, autocapitalize: :off, enterkeyhint: :next, spellcheck: :false, maxlength: 20, title: "Enter a username" } %>

  <%= f.input :email_address,
              as: :email,
              label: "Email address",
              input_html: { autocomplete: :email, autocorrect: :off, required: true, autocapitalize: :off, enterkeyhint: :next, spellcheck: false, title: "Enter your email address" } %>

  <%= f.input :password,
              as: :password,
              label: "Password",
              input_html: { autocomplete: :off, required: true, minlength: 6, maxlength: 72, spellcheck: false, autocapitalize: :off, enterkeyhint: :next, title: "Enter a password" } %>

  <%= f.input :password_confirmation,
              as: :password,
              label: "Confirm password",
              input_html: { autocomplete: :off, required: true, minlength: 6, maxlength: 72, spellcheck: false, autocapitalize: :off, enterkeyhint: :next, title: "Enter your password again" } %>

  <%= f.submit "Sign up",
               class: "mt-4 w-full inline-flex justify-center rounded-md bg-gray-900 dark:bg-white px-4 py-3 text-white dark:text-gray-950 hover:bg-gray-800 dark:hover:bg-white/95 cursor-pointer" %>
<% end %>
