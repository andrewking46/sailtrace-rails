<div class="flex min-h-full flex-col justify-center px-4 py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="text-2xl/8 font-semibold text-gray-950 sm:text-xl/8 dark:text-white text-center">Set new password</h1>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= sailtrace_form_for @user, url: password_reset_path(reset_token: @password_reset.reset_token) do |f| %>
      <%= f.input :password,
                  as: :password,
                  label: "Password",
                  hint: "Enter a new password.",
                  input_html: { required: true, autocomplete: :off } %>

      <%= f.input :password_confirmation,
                  as: :password,
                  label: "Confirm password",
                  hint: "Enter your new password again.",
                  input_html: { required: true, autocomplete: :off } %>

      <%= f.submit "Update password",
                   class: "mt-4 w-full inline-flex justify-center rounded-md bg-gray-900 dark:bg-white px-4 py-3 text-white dark:text-gray-950 hover:bg-gray-800 dark:hover:bg-white/95 cursor-pointer" %>
    <% end %>
  </div>
</div>