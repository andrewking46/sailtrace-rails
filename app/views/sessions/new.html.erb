<div class="flex min-h-full flex-col justify-center px-4 py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="text-2xl/8 font-semibold text-gray-950 sm:text-xl/8 dark:text-white text-center">Sign in to your account</h1>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= sailtrace_form_for :session, url: session_path do |f| %>
      <%= f.input :email_address,
                  as: :email,
                  label: "Email address",
                  input_html: { autocomplete: :email, autocorrect: :off, required: true, autofocus: true, autocapitalize: :off, enterkeyhint: :next, spellcheck: false, title: "Enter your email address" } %>

      <%= f.input :password,
                  as: :password,
                  label: "Password",
                  input_html: { autocomplete: "current-password", required: true, minlength: 6, maxlength: 72, spellcheck: false, autocapitalize: :off, title: "Enter your password" } %>

      <%= f.submit "Log in",
                   class: "mt-4 w-full inline-flex justify-center rounded-md bg-gray-900 dark:bg-white px-4 py-3 text-white dark:text-gray-950 hover:bg-gray-800 dark:hover:bg-white/95 cursor-pointer" %>
    <% end %>

    <p class="mt-10 text-center text-sm/6 text-gray-500 dark:text-white/60">
      Don't have a SailTrace account yet?
      <%= link_to "Sign up", new_user_path %>
    </p>

    <p class="mt-2 text-center text-sm/6 text-gray-500 dark:text-white/60">
      Forgot your password?
      <%= link_to "Reset it here", new_password_reset_path %>
    </p>
  </div>
</div>
